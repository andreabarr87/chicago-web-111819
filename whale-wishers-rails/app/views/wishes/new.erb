<h1>new wish</h1>

<%= form_with model: @wish do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :description %>
  <%= f.text_area :description, size: "20x6" %>
  <%= f.collection_select(:whale_id, @whales, :id, :name) %>
  <%= f.submit %>
<% end %>

<%= link_to "Back to Wishes", wishes_path  %>
